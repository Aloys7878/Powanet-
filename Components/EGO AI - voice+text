import React, { useState } from "react";

export function EgoChat() {
  const [messages, setMessages] = useState([]);
  const [input, setInput] = useState("");

  const sendMessage = () => {
    if (!input.trim()) return;
    const reply = "EGO ðŸ¤–: Iâ€™m here to guide your POWANET journey globally!";
    setMessages([...messages, "You: " + input, reply]);
    setInput("");
  };

  return (
    <section className="ego-chat">
      <h2>ðŸ§  EGO Assistant (AI Voice+Text)</h2>
      <div className="chat-box">
        {messages.map((m, i) => (
          <div key={i} className="msg">{m}</div>
        ))}
      </div>
      <input value={input} onChange={(e) => setInput(e.target.value)} placeholder="Ask EGO..." />
      <button onClick={sendMessage}>Send</button>
    </section>
  );
}
function EgoVoice(text) {
  const synth = window.speechSynthesis;
  const utter = new SpeechSynthesisUtterance(text);
  utter.lang = "en-US";
  synth.speak(utter);
}

export function EgoAssistant() {
  const handleSpeak = () => EgoVoice("Hello! I am your EGO Assistant. How can I help you today?");
  return (
    <button onClick={handleSpeak}>
      ðŸŽ¤ Talk to EGO
    </button>
  );
}
